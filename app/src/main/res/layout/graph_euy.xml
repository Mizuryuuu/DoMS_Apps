<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphDoMs"
    android:background="@color/colorDasar">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

    <RelativeLayout
        android:id="@+id/topContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/et_userProfile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/profil_user"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/et_userProfile"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Us*****@gmail.com"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/et_userProfile"
            android:layout_below="@+id/user_name"
            android:textSize="12sp"/>

    </RelativeLayout>

        <TextView
            android:id="@+id/et_notifIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/notif_icon"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/graphic"
            android:layout_below="@id/topContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/graphic"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:id="@+id/thirdMain_content"
            android:layout_below="@id/graphic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/titleThirdContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_below="@id/titleThirdContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_shape"
                    android:elevation="5dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/titleItem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:textColor="@color/TextHijau"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleItem1"
                        android:layout_marginTop="4dp"
                        android:text="Due date : 23 June, 2023"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 500.000,"
                        android:textColor="@color/TextHijau"
                        android:layout_toStartOf="@id/tambahHijau"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/tambahHijau"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/add_nav"
                        android:backgroundTint="@color/TextHijau"
                        android:layout_alignParentEnd="true"
                        android:gravity="center" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_shape"
                    android:elevation="5dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/titleItem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spending"
                        android:textColor="@color/TextMerah"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleItem2"
                        android:layout_marginTop="4dp"
                        android:text="Due date : 1 June, 2023"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/kurangMerah"
                        android:gravity="center_vertical"
                        android:text="Rp. 250.000,"
                        android:textColor="@color/TextMerah"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/kurangMerah"
                        android:layout_width="20dp"
                        android:layout_height="4dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/minus"
                        android:backgroundTint="@color/TextMerah" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/custom_shape"
                    android:elevation="5dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/titleItem3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:textColor="@color/TextHijau"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleItem3"
                        android:layout_marginTop="4dp"
                        android:text="Due date : 29 May, 2023"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 300.000,"
                        android:textColor="@color/TextHijau"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:layout_toStartOf="@id/tambahHijau2"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tambahHijau2"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:background="@drawable/add_nav"
                        android:backgroundTint="@color/TextHijau"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_shape"
        android:padding="15dp">

        <TextView
            android:id="@+id/home_cuy"
            android:layout_marginStart="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home2_nav"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/chart_cuy"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart2_nav"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/add_cuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_nav_euy"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        />

</RelativeLayout>