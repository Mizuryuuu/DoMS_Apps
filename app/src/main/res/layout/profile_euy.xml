<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDoMs"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/topContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bulet_bulet">

            <TextView
                android:id="@+id/backArrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/back_arrow"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/userImage"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="@drawable/profil_user"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_below="@id/userImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="User Name"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_below="@id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="User****@gmail.com"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topContent"
        android:background="@drawable/rounded_kotak"
        android:padding="50dp">

        <RelativeLayout
            android:id="@+id/editCuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/garisPertama"
                android:layout_below="@id/editProfile"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/editUsername"
                android:layout_below="@id/garisPertama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_below="@id/garisPertama"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/panah_kanan"
                android:layout_marginVertical="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/editCuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/logoutProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_below="@id/logoutProfile"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/logoutBtn"
                android:layout_below="@id/logoutProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_below="@id/logoutProfile"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/panah_kanan"
                android:layout_marginVertical="10dp"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>